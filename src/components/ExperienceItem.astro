---
import LinkInline from "./LinkInline.astro"

interface Props {
  title: string
  company: string
  description?: string
  link?: string
  date: string
}

const { title, company, description, link, date } = Astro.props
---

<div
  class="relative mx-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/15 dark:before:border-white/15 before:content-[''] md:grid-cols-3 md:gap-10 md:space-x-4]"
>
  <div class="relative md:col-span-2">
    <div class="sticky top-0">
      <span class="text-cyan-800 dark:text-cyan-400 -left-[42px] absolute rounded-full text-5xl"
        >&bull;</span
      >

      <h3 class="text-2xl font-bold text-cyan-800 dark:text-cyan-400">{title}</h3>
      <h4 class="font-semibold text-lg text-black dark:text-white">{company}</h4>
      <time class="p-0 m-0 text-sm text-black/70 dark:text-white/80">{date}</time>
    </div>
    <ul class="m-10 mb-0 list-disc relative flex flex-col gap-2 pb-4 text-lg text-slate-700 dark:text-gray-300 md:col-span-3">
      <li>Fullstack Developer en sistemas bancarios utilizando Angular, .NET y SQL Server.</li>
      <li>Desarrollo de APIs y optimización de performance en entornos críticos.</li>
      <li>Experiencia en IVR, integración de servicios y procesamiento de audio.</li>
      <li>Desarrollo de herramientas internas y automatización de procesos.</li>
    </ul>
  </div>
</div>
</div>
